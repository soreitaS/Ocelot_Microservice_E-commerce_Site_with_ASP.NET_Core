@model List<ResultProductDetailDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Detayları Listesi</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Ürün Detaı ID</th>
                                <th>Ürün Açıklaması</th>
                                <th>Ürün Bilgisi</th>
                                <th>Ürün ID</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.ProductDetailId</th>
                                    <td>@item.ProductDescription</td>
                                    <td>@item.ProductInfo</td>
                                    <td>@item.ProductId</td>
                                    <td><a href="/Admin/ProductDetail/DeleteProductDetail/@item.ProductDetailId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/ProductDetail/UpdateProductDetail/@item.ProductDetailId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Admin/ProductDetail/CreateProductDetail/" class="btn btn-primary">Ürün Detayları Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>

